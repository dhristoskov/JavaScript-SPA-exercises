{{> header}}
{{#if isLoggedIn}}
{{#each recipes}}
       <div id="sharedRecipes">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="our-team-main">

                            <div class="team-front">
                                <img src="{{categoryImageURL}}" />
                                <h3>{{meal}}</h3>
                                <p>{{category}}</p>
                            </div>

                            <div class="team-back">
                                <div class="back-side-info">
                                    <h4>Ingredients</h4>
                                    <ul>
                                        {{#each ingredients}}
                                        <li> {{this}} </li>
                                        {{/each}}
                                    </ul>
                                    <a href="#">View the recipe</a>
                                </div>

                                <img class="foodImage"
                                    src="{{foodImageURL}}" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
       </div>
{{else}}
    <div id='foodNotFound'>
        <img src="https://cdn.pixabay.com/photo/2014/03/25/16/55/cutlery-297617_960_720.png"/>
        <h3>Recipes not found...</h3>
    </div>
{{/each}}
{{else}}
    <main role="main" class="inner cover mt-5">
        <h1 class="cover-heading">Our new healthy cooking blog is here</h1>
        <h2 class="lead">It Only Takes a While, To Live A Healthy Lifestyle</h2>
    </main>
{{/if}}
{{> footer}}
